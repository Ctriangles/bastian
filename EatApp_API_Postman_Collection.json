		{
			"name": "Error Tests",
			"item": [
				{
					"name": "Invalid API Key",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "invalid_key",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/restaurants",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"restaurants"
							]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status is 401\", function () {",
									"    pm.response.to.have.status(401);",
									"});",
									"",
									"pm.test(\"Unauthorized message\", function () {",
									"    const response = pm.response.json();",
									"    pm.expect(response.status).to.be.false;",
									"    pm.expect(response.message).to.include(\"Unauthorized\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Missing Required Fields",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "123456789",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"restaurant_id\": \"{{restaurant_id}}\",\n  \"covers\": 4\n}"
						},
						"url": {
							"raw": "{{base_url}}/create_reservation",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"create_reservation"
							]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status is 400\", function () {",
									"    pm.response.to.have.status(400);",
									"});",
									"",
									"pm.test(\"Missing field message\", function () {",
									"    const response = pm.response.json();",
									"    pm.expect(response.status).to.be.false;",
									"    pm.expect(response.message).to.include(\"Missing required field\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default headers",
					"pm.request.headers.add({",
					"    key: 'Content-Type',",
					"    value: 'application/json'",
					"});",
					"",
					"// Add timestamp for unique testing",
					"pm.environment.set(\"timestamp\", new Date().toISOString());"
