# Bastian Reservation API - Production Environment Variables
# This file should be customized for production deployment

# API Configuration - Production
VITE_API_KEY=your_production_api_key_here
VITE_API_BASE_URL=https://bastian.ninetriangles.com/admin

# Environment
VITE_NODE_ENV=production

# Google reCAPTCHA - Production keys
VITE_RECAPTCHA_SITE_KEY=your_production_recaptcha_site_key

# Analytics and Tracking (if used)
VITE_GA_TRACKING_ID=your_google_analytics_id
VITE_GTM_ID=your_google_tag_manager_id

# Feature Flags
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_MOCK_DATA=false

# Security
VITE_ENABLE_HTTPS_ONLY=true
